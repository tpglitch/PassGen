modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Password Generator Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Build Standalone"

[[workflows.workflow]]
name = "Password Generator Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "ts-node src/server.ts"
waitForPort = 5000

[[workflows.workflow]]
name = "Build Standalone"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./build.sh"

[deployment]
run = ["sh", "-c", "npm install && npm run dev"]

[[ports]]
localPort = 5000
externalPort = 80
